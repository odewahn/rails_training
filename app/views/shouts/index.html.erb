
<%= form_for(@shout, remote: true) do |form| %>
  <% unless @shout.errors.empty? %>
    <p>Failed to save because: </p>
    <ul>
      <% @shout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= form.text_field :body, placeholder: "Shout here" %>
    <%= form.submit "Shout" %>
  </div>
<% end %>

<section>
<h1>Shouts</h1>
<% unless @shouts.empty? %>
  <ol id="shouts">
  <% @shouts.each do |shout| %>
    <li><%= shout.body %> - <%= shout.user.email %></li>
  <% end %>
  </ol>
  <%= paginate @shouts %>
<% end %>
</section>
